# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET        /anime/lists            controllers.Anime.lists
GET        /anime/watching         controllers.Anime.watching

GET        /twitter/mention        controllers.Twitter.lastMention

GET        /tumblr/posts           controllers.Tumblr.posts

GET        /aw                     controllers.AdvanceWars.index
GET        /aw/game/:id            controllers.AdvanceWars.getGameState(id)
POST       /aw/move/unit           controllers.AdvanceWars.moveUnit

GET        /                       controllers.Home.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)

GET        /webjars/*file          controllers.WebJarAssets.at(file)

